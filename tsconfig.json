{
  "compilerOptions": {
    "strict": true,
    "outDir": "bin",
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["index.ts"],
  "include": ["resources/**/*.ts"]
}
